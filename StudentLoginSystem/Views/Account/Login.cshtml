@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .login-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .login-logo {
        background: linear-gradient(90deg, #0d6efd, #6610f2);
        padding: 20px;
        text-align: center;
    }

        .login-logo img {
            max-height: 60px;
        }

    .login-body {
        padding: 30px;
    }

    .btn-primary, .btn-secondary {
        padding: 10px;
        font-weight: 500;
        font-size: 1rem;
        border-radius: 8px;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Beautiful Transparent Card -->
            <div class="card shadow-lg border-0 rounded-4" style="background: rgba(255, 255, 255, 0.15); backdrop-filter: blur(10px); box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2); border: 1px solid rgba(255, 255, 255, 0.2);">

                <!-- Header with Logo -->
                <div class="text-center p-4 bg-gradient" style="background: #55B4F7;">
                    <img src="~/images/logo-white.png" alt="Mama Parsi Logo" style="max-height: 100px;" />
                </div>

                <!-- Transparent Form Body -->
                <div class="p-4" style="color: #002f36;">
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username (Roll Number)</label>
                            <input asp-for="Username" class="form-control rounded-pill" placeholder="Enter your Roll Number" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your GR Number" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" name="action" value="login" class="btn btn-primary rounded-pill">Login</button>
                            <button type="submit" name="action" value="getPassword" class="btn btn-outline-light rounded-pill border-0" style="background: rgba(255,255,255,0.25); color: #002f36;">Get Your Password</button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                    }

                    @if (ViewBag.Password != null)
                    {
                        <div class="alert alert-success mt-3">
                            Your password is: <strong>@ViewBag.Password</strong>
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</div>
