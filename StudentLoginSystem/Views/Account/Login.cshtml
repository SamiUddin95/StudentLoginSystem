@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container py-5 my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <!-- Beautiful Transparent Card -->
            <div class="card shadow-lg border-0 rounded-4"
                 style="background: rgba(255, 255, 255, 0.2);
                        backdrop-filter: blur(12px);
                        -webkit-backdrop-filter: blur(12px);
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);">

                <!-- Header with Logo -->
                <div class="text-center py-4 px-3 rounded-top-4" style="background-color: #2880AF;">
                    <img src="~/images/logo-white.png" alt="Mama Parsi Logo" style="max-height: 100px;" />
                </div>

                <!-- Transparent Form Body -->
                <div class="p-4" style="color: #002f36;">
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Username (S.GR-No)</label>
                            <input asp-for="Username" class="form-control rounded-pill" placeholder="Enter your S.GR-No" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your Password" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" name="action" value="login" class="btn btn-primary rounded-pill">Login</button>
                            <button type="submit" name="action" value="getPassword" class="btn btn-outline-light rounded-pill border-0"
                                    style="background-color: #002f36;">
                                Get Your Password
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
                    }

                    @if (ViewBag.Password != null)
                    {
                        <div class="alert alert-success mt-3">
                            Your password is: <strong>@ViewBag.Password</strong>
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</div>

